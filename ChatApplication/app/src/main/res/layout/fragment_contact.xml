<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_contact"
        tools:context=".activity.fragment.ContactFragment">

    <TextView
            android:id="@+id/tv_no_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:text="No contact yet. Go to add somebody!" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_contact_frag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>